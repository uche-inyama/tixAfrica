<%= turbo_frame_tag dom_id(event) do%>
  <div class="col mb-3">
    <div class="mb-3">
      <%= link_to "#" do %>
        <%= image_tag(event.image.url, class: "author_image") if event.image %>
      <% end %>
    </div>
    <div class="">
      <p><strong><%= event.theme %></strong></p>
      <p><strong>Status: <%= event.get_status(event.end_date) %>  Type of event: <%= event.event_type %></strong></p>
      <div id="likes" class="mb-2">
        <%= turbo_frame_tag dom_id(event.user) do %>
          <%= render partial: 'likes/like', locals: {event: event, user: current_user }%>
        <% end %>
      </div>
      <div class="d-flex"> 
        <%= link_to "Edit", edit_event_path(event), class: "btn btn-primary py-0" %>
        <%= button_to "delete", event_path(event), class: "mx-2", method: :delete %>
      </div>
    </div>
  </div>
<% end %>
