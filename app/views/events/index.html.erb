<div>
  <%= link_to "create Event", new_event_path %>
</div>

<h4><%= current_user.email %>'s events</h4>
<% @events.each do |event| %>
  <%= link_to  event.theme, event_path(event) %> <span><%= event.get_status(event.end_date) %></span> <br />
  <%= link_to "Edit", edit_event_path(event) %> <%= link_to "delete", event_path(event), method: :delete %> <br /> <br />
<% end %>

<h4>All Events</h4>

<% @all_events.each do |event| %>
  <%= link_to event.theme, event_path(event)%> <span> status: <%= event.get_status(event.end_date) %></span> <br />
  <%= link_to "Edit", edit_event_path(event) %> <%= link_to "delete", event_path(event), method: :delete %> <br /> <br />
<% end %>